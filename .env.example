# OCR Configuration
# OCR method: 'tesseract' for local binary or 'rest' for web service
OCR_METHOD=tesseract
# Path to tesseract binary (used when OCR_METHOD is 'tesseract')
TESSERACT_PATH=tesseract
# REST API endpoint for OCR service (used when OCR_METHOD is 'rest')
OCR_SERVICE_URL=http://localhost:8080
# OCR language (default: eng for English)
OCR_LANGUAGE=eng

# Google OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_OAUTH2_CLIENT_ID=your-client-id-here
GOOGLE_OAUTH2_CLIENT_SECRET=your-client-secret-here

# Gutendex API (Project Gutenberg catalog API)
GUTENDEX_API_URL=https://gutendex.toolforge.org

# Devise Secret (for secure password encryption)
# Generate with: rails secret
DEVISE_PEPPER=your-devise-pepper-here

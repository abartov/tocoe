{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        },
        {
            "type": "rdbg",
            "name": "RSpec current line with rdbg",
            "request": "launch",
            "useBundler": true,
            "script": "./bin/rspec",
            "args": [
                "${file}:${lineNumber}"
            ],
        },
        {
            "type": "ruby_lsp", // Or "rdbg" depending on your chosen extension
            "request": "launch",
            "name": "Debug RSpec Current File",
            "program": "${workspaceFolder}/bin/rspec", // Adjust if rspec is located elsewhere
            "args": ["${file}"],
            "useBundler": true // Set to true if using Bundler
        },
        {
            "type": "ruby_lsp", // Or "rdbg" depending on your chosen extension
            "request": "launch",
            "name": "Debug Rails Server",
            "program": "${workspaceFolder}/bin/rails s",
            "args": ["server"],
            "useBundler": true // Set to true if using Bundler
        }
    ]
}
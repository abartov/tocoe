%h1= t('aboutnesses.index.subject_headings')
%p=  t('aboutnesses.index.manage_subject_headings', title: @embodiment.expression&.title || 'Untitled')

- if @embodiment.expression&.work&.creators&.any?
  %p.text-muted
    %strong= t('manifestations.show.authors_label', default: 'Authors:')
    = @embodiment.expression.work.creators.map(&:name).join(', ')

- if @embodiment.manifestation&.toc&.authors&.any?
  %p.text-muted
    %strong= t('manifestations.show.authors_label', default: 'Authors:')
    = "(#{t('aboutnesses.index.from_toc', default: 'from TOC')})"
    = @embodiment.manifestation.toc.authors.map(&:name).join(', ')

.row
  .col-xs-12
    %h2 Current Subject Headings
    - if @aboutnesses.any?
      = render 'list', aboutnesses: @aboutnesses
    - else
      %p.text-muted No subject headings assigned yet.

    %p
      = link_to 'Add Subject Heading', new_embodiment_aboutness_path(@embodiment), class: 'btn btn-primary'
      - if @embodiment.manifestation&.toc
        = link_to 'Back to ToC', toc_path(@embodiment.manifestation.toc), class: 'btn btn-default'

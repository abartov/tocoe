.row
  #sidebar{ class: 'col-xs-2' }
    sidebar here
  #content{ class: 'col-xs-10' }
    %h1 Pick a book to make a ToC for:
    %p Search Open Library for publications with full-text available
    = form_tag publications_search_path, :method => 'get', :id => 'publications_search' do
      .form-group
        = label_tag :search, 'General Search:'
        = text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search for anything...'
      .form-group
        = label_tag :title, 'Or Search by Title:'
        = text_field_tag :title, params[:title], class: 'form-control', placeholder: 'Book title...'
      .form-group
        = label_tag :author, 'Or Search by Author:'
        = text_field_tag :author, params[:author], class: 'form-control', placeholder: 'Author name...'
      .form-group
        = check_box_tag :fulltext_only, '1', params[:fulltext_only] == '1'
        = label_tag :fulltext_only, 'Only show books with full-text publicly available'
      = submit_tag 'Search', :name => nil, class: 'btn btn-primary'
      - if @num_results
        %p.text-muted
          Found #{@num_results} result#{ @num_results == 1 ? '' : 's' }
      #results
        != render partial: 'ol_results', locals: { :results => @results}
    %p

:javascript
  $(document).ready(function() {
    var multiselectActive = false;

    // Toggle multi-select mode
    $('#toggle-multiselect').click(function() {
      multiselectActive = !multiselectActive;

      if (multiselectActive) {
        $('.checkbox-column').show();
        $(this).addClass('btn-primary').removeClass('btn-default');
        $(this).text('Exit Multi-select');
      } else {
        $('.checkbox-column').hide();
        $('.book-checkbox').prop('checked', false);
        $(this).removeClass('btn-primary').addClass('btn-default');
        $(this).text('Multi-select');
        $('#bulk-toc-form').hide();
      }
      updateBulkButton();
    });

    // Update bulk create button visibility
    function updateBulkButton() {
      var checkedCount = $('.book-checkbox:checked').length;
      if (checkedCount > 0) {
        $('#bulk-toc-form').show();
        $('#bulk-create-btn').text('Make TOCs for ' + checkedCount + ' selected!');
      } else {
        $('#bulk-toc-form').hide();
      }
    }

    // Listen for checkbox changes
    $(document).on('change', '.book-checkbox', updateBulkButton);
  });
